<!-- activity_main.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:animateLayoutChanges="true"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/rootView"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="774px"
            android:orientation="vertical"
            android:id="@+id/header_layout"
            android:layout_marginStart="64px"
            android:layout_marginEnd="64px"
            android:paddingTop="74px"
            >
            <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="182px"
            android:text="재료 상자 탐색하기"
            android:textSize="160px"
            android:fontFamily="@font/suit_bold"
            android:textColor="@color/black"
            />
            <ImageView
                android:layout_width="731px"
                android:layout_height="40px"
                android:layout_marginTop="44px"
                android:layout_marginStart="4px"
                android:src="@drawable/logotype"
                android:foregroundGravity="center"
                />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/header_layout_open"
            android:layout_width="match_parent"
            android:layout_height="224px"
            android:layout_marginStart="64px"
            android:layout_marginEnd="64px"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재료 상자 탐색하기"
                android:fontFamily="@font/suit_bold"
                android:textSize="60px"
                android:textFontWeight="800"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageView
                android:layout_width="731px"
                android:layout_height="40px"
                android:src="@drawable/logotype"
                android:foregroundGravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            >
            <View
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@color/black"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp">

                <View
                    android:id="@+id/layout1_bg"
                    android:layout_width="match_parent"
                    android:layout_height="820px"
                    android:background="@drawable/layout1_bg"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="270px"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    android:background="@android:color/transparent"
                    >
                    <LinearLayout
                        android:id="@+id/title1"
                        android:layout_width="match_parent"
                        android:layout_height="270px"
                        android:orientation="horizontal"
                        android:animateLayoutChanges="true"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        >
                        <TextView
                            android:id="@+id/title_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="150px"
                            android:text="옻나무에서 옻칠까지"
                            android:textColor="@color/black"
                            android:textSize="110px"
                            android:lineHeight="137px"
                            android:layout_marginStart="64px"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/suit_medium"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <ImageView
                            android:id="@+id/caretButton1"
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_marginEnd="64px"
                            android:layout_gravity="center"
                            android:src="@drawable/button_caret_open" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/description1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="64px"
                        android:layout_marginEnd="64px"
                        >
                        <TextView
                            android:layout_width="1502px"
                            android:layout_height="174px"
                            android:text="옻칠을 채취하고, 정제하는 과정과 활용 방법에 대해 알아봅니다."
                            android:textColor="@color/black"
                            android:lineHeight="85px"
                            android:letterSpacing="-0.06"
                            android:textSize="54px" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="167px"
                            >

                            <Button
                                android:id="@+id/button_1_1"
                                android:layout_width="772px"
                                android:layout_height="185px"
                                android:text="채취하기"
                                android:textSize="70px"
                                android:fontFamily="@font/suit_semibold"
                                android:background="@drawable/button_bg"
                                android:textColor="@drawable/button_text_color_selector"
                                />

                            <Button
                                android:id="@+id/button_1_2"
                                android:layout_width="772px"
                                android:layout_height="185px"
                                android:text="정제하기"
                                android:textSize="70px"
                                android:fontFamily="@font/suit_semibold"
                                android:background="@drawable/button_bg"
                                android:textColor="@drawable/button_text_color_selector"
                                android:layout_marginStart="58px"
                                />
                                <Button
                                    android:id="@+id/button_1_3"
                                    android:layout_width="772px"
                                    android:layout_height="185px"
                                    android:text="활용하기"
                                    android:textSize="70px"
                                    android:fontFamily="@font/suit_semibold"
                                    android:background="@drawable/button_bg"
                                    android:textColor="@drawable/button_text_color_selector"
                                    android:layout_marginStart="58px"
                                    />
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout android:id="@+id/detail_content_frame1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="1330px"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@color/black"/>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp">
                <View
                    android:id="@+id/layout2_bg"
                    android:layout_width="match_parent"
                    android:layout_height="820px"
                    android:background="@drawable/layout2_bg"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="270px"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    android:background="@android:color/transparent"
                    >

                    <LinearLayout
                        android:id="@+id/title2"
                        android:layout_width="match_parent"
                        android:layout_height="270px"
                        android:orientation="horizontal"
                        android:animateLayoutChanges="true"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        >
                        <TextView
                            android:id="@+id/title_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="150px"
                            android:text="다양한 칠과 희석제"
                            android:textColor="@color/black"
                            android:textSize="110px"
                            android:lineHeight="137px"
                            android:layout_marginStart="64px"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/suit_medium"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <ImageView
                            android:id="@+id/caretButton2"
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_marginEnd="64px"
                            android:layout_gravity="center"
                            android:src="@drawable/button_caret_open" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/description2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:animateLayoutChanges="true"
                        android:layout_marginStart="64px"
                        android:layout_marginEnd="64px"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="1502px"
                            android:layout_height="174px"
                            android:text="전통적으로 사용한 옻칠과 옻칠 대신 사용하는 대용칠(화학\n도료), 칠과 섞어 사용하는 희석제에 대해 알아봅니다."
                            android:textColor="@color/black"
                            android:lineHeight="85px"
                            android:letterSpacing="-0.06"
                            android:textSize="54px" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="166px"
                            >

                            <Button
                                android:id="@+id/button_2_1"
                                android:layout_width="772px"
                                android:layout_height="185px"
                                android:text="옻칠의 종류"
                                android:textSize="70px"
                                android:fontFamily="@font/suit_semibold"
                                android:background="@drawable/button_bg"
                                android:textColor="@drawable/button_text_color_selector"
                                />

                            <Button
                                android:id="@+id/button_2_2"
                                android:layout_width="772px"
                                android:layout_height="185px"
                                android:text="대용칠(화학 도료)"
                                android:textSize="70px"
                                android:fontFamily="@font/suit_semibold"
                                android:background="@drawable/button_bg"
                                android:textColor="@drawable/button_text_color_selector"
                                android:layout_marginStart="58px"
                                />
                            <Button
                                android:id="@+id/button_2_3"
                                android:layout_width="772px"
                                android:layout_height="185px"
                                android:text="희석제"
                                android:textSize="70px"
                                android:fontFamily="@font/suit_semibold"
                                android:background="@drawable/button_bg"
                                android:textColor="@drawable/button_text_color_selector"
                                android:layout_marginStart="58px"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout android:id="@+id/detail_content_frame2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="1330px"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/divider_3"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@color/black"
                />
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_margin="0dp">

                <View
                    android:id="@+id/layout3_bg"
                    android:layout_width="match_parent"
                    android:layout_height="820px"
                    android:background="@drawable/layout3_bg"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="270px"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    android:background="@android:color/transparent"
                    >

                    <LinearLayout
                        android:id="@+id/title3"
                        android:layout_width="match_parent"
                        android:layout_height="270px"
                        android:orientation="horizontal"
                        android:animateLayoutChanges="true"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        >
                        <TextView
                            android:id="@+id/title_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="150px"
                            android:text="색깔 내기(안료)"
                            android:textColor="@color/black"
                            android:textSize="110px"
                            android:lineHeight="137px"
                            android:layout_marginStart="64px"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/suit_medium"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <ImageView
                            android:id="@+id/caretButton3"
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_marginEnd="64px"
                            android:layout_gravity="center"
                            android:src="@drawable/button_caret_open" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/description3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:animateLayoutChanges="true"
                        android:layout_marginStart="64px"
                        android:layout_marginEnd="64px"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="1502px"
                            android:layout_height="174px"
                            android:text="옻칠과 혼합하여 다양한 색상을 내는 안료에 대해 알아봅니다."
                            android:textColor="@color/black"
                            android:lineHeight="85px"
                            android:letterSpacing="-0.06"
                            android:textSize="54px" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="166px"
                            >

                            <Button
                                android:id="@+id/button_3_1"
                                android:layout_width="1188px"
                                android:layout_height="185px"
                                android:text="천연 안료"
                                android:textSize="70px"
                                android:fontFamily="@font/suit_semibold"
                                android:textColor="@drawable/button_text_color_selector"
                                android:background="@drawable/button_bg"
                                />

                            <Button
                                android:id="@+id/button_3_2"
                                android:layout_width="1188px"
                                android:layout_height="185px"
                                android:text="화학 안료"
                                android:textSize="70px"
                                android:fontFamily="@font/suit_semibold"
                                android:background="@drawable/button_bg"
                                android:textColor="@drawable/button_text_color_selector"
                                android:layout_marginStart="56px"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout android:id="@+id/detail_content_frame3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="1330px"
                        />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/divider_4"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="#222222"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>