                        android:layout_width="796px"
                        android:layout_height="1009px"
                        android:layout_marginBottom="22px"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/content_detail_1_2"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="82px"
                            android:layout_gravity="center_horizontal|bottom"
                            android:gravity="center_vertical"
                            android:paddingLeft="26px"
                            android:text="일제강점기 옻칠 채취 모습"
                            android:textSize="34px"
                            android:background="#4D4D4D"
                            android:fontFamily="@font/suit_bold"
                            android:textColor="#EFEFEF" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:gravity="end"
                        android:text="출처 : 국립중앙도서관 제공"
                        android:textSize="34px"
                        android:fontFamily="@font/suit_medium"
                        android:textColor="#A4A4A4" />
                </FrameLayout>

